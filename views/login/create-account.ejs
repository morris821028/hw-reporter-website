<% layout( '../layout' ) -%>

    <div id="wrapper">
            <nav class="navbar navbar-default navbar-fixed-top" role="navigation" style="margin-bottom: 0">

            <%- partial('../header') %> 
            <!-- /.navbar-header -->
            <%- partial('../navbar-top-links') %>
            <!-- /.navbar-top-links -->
            <%- partial('../navbar-static-side') %>
            <!-- /.navbar-static-side -->
        </nav>

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header"> Sign In </h1>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Create Account
                        </div>
                        <div class="panel-body">
                            <div class="col-lg-6">
                                    <form role="form">
                                        <div class="form-group">
                                            <label>UserName</label>
                                            <input class="form-control" placeholder="email@example.com">
                                        </div>

                                        <div class="form-group">
                                            <label>Password</label>
                                            <input class="form-control" type="password">
                                        </div>

                                        <div class="form-group">
                                            <label>Icon File input</label>
                                            <input type="file">
                                        </div>
                                    </form>
                                </div>
                                <!-- /.col-lg-6 (nested) -->
                                <div class="col-lg-6">
                                    <form role="form">
                                        <div class="form-group">
                                            <label>First Name</label>
                                            <input class="form-control" placeholder="">
                                        </div>

                                        <div class="form-group">
                                            <label>Last Name</label>
                                            <input class="form-control" placeholder="">
                                        </div>

                                        <button type="submit" class="btn btn-default">Submit</button>
                                        <button type="reset" class="btn btn-default">Reset</button>
                                    </form>
                                </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- Core Scripts - Include with every page -->
    <script src="/javascripts/jquery-1.10.2.js"></script>
    <script src="/javascripts/bootstrap.min.js"></script>
    <script src="/javascripts/plugins/metisMenu/jquery.metisMenu.js"></script>

    <!-- Page-Level Plugin Scripts - Dashboard -->
    <script src="/javascripts/plugins/morris/raphael-2.1.0.min.js"></script>
    <script src="/javascripts/plugins/morris/morris.js"></script>

    <!-- SB Admin Scripts - Include with every page -->
    <script src="/javascripts/sb-admin.js"></script>

    <!-- Page-Level Demo Scripts - Dashboard - Use for reference -->
    <script src="/javascripts/demo/dashboard-demo.js"></script>